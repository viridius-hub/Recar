header.header#header
    .container
        .header__wrapper
            .header__logo
                a(href="/")
                    img(src=require('@images/logo.png'))
            .header__block
                .only-desktop
                    label.header__search
                        +icon('search')
                        input(placeholder="Поиск")
                .only-mobile
                    a(href="#").header__button
                        +icon('SearchRoundedFilled')
                .header__info
                    a(href="#").header__button
                        +icon('BookmarkRounded')
                        span Избранное
                    a(href="#").header__button
                        +icon('ShoppingCartRounded')
                        span Корзина
                    a.header__login.button.button--primary
                        span.only-mobile
                            +icon('LoginRounded')
                        span.only-desktop Войти