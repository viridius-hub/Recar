

extends ../layout/default

block content
    .new-car
        .container
            button.back-button
                +icon('back')
                | Назад
            .new-car__content
                h1.new-car__title Тачка 1
                .new-car__sections
                    .new-car__section
                        label.new-car__field
                            span Наименование
                            input(placeholder="Мамина машина")
                        label.new-car__field
                            span Название авто
                            input(placeholder="Марка, модель")
                        label.new-car__field
                            span VIN номер
                            input(placeholder="123123123")
                        label.new-car__checkbox
                            .checkbox.checkbox--square
                                input(type="checkbox")
                                +icon('CheckBoxOutlineBlankRounded')
                                +icon('CheckBoxRounded')
                            span Главное авто
                        button.new-car__edit Сохранить
                        button.new-car__del(data-modal-open='remove_car') Удалить
                    .new-car__vertical_line
                    .new-car__section.new-car__section--gap16
                        label.new-car__field
                            span Год
                            .select
                                input(placeholder="Не выбрано" data-select)
                                +icon('dropdown')
                                .select__options(data-select-options)
                                    ul.select__options__wrapper
                                        +loop(20)
                                            li(data-select-option).select__options__item select option
                        label.new-car__field
